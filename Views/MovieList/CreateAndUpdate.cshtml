@model MovieApi.Models.MovieItem

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<html>
<body>
    <div class="row mt-5">
        <h1 class="text-center w-100" style="font-weight:Bold;">@ViewBag.header</h1>
    </div>
    <div class="container mt-5 ">
      @using(Html.BeginForm("CreateAndUpdate","MovieList",FormMethod.Post, new{enctype="multipart/form-data"}))
      {
         @Html.ValidationSummary()
         { 
             <div class="form-group row">
                <div class="col-5" >
                    <img src="data:image/jpg;base64, @Model.getPoster()" width="300" height="350" class="center" hidden=@Model.isNullImage()>
                </div>
                <div class="col-5">             
                    <div class="form-group row" hidden>
                    @Html.LabelFor(x => x.id, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.id, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group row">
                    @Html.LabelFor(x => x.name,"Name:", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.name, new {@class = "form-control", @maxlength= "20"})
                        </div>
                    </div>
                    <div class="form-group row">
                    @Html.LabelFor(x => x.year,"Year:", new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.year, new { @class = "form-control" ,@type="number"})
                        </div>
                    </div>
                    <div class="form-group row">
                    @Html.LabelFor(x => x.posterFile,"Movie Poster:" , new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.posterFile, new{ @type = "file"})
                        </div>
                    </div> 
                </div>    
            </div>       
            <button type="submit" class="btn btn-primary" style="float: right;" onclick="return confirm('Do you want to save the movie?');">Save</button>
         }
      }
    </div>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>
